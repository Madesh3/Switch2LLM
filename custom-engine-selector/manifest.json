{
    "manifest_version": 3,
    "name": "Custom Engine Selector",
    "version": "1.0",
    "description": "Allows users to select their default web browser engine (e.g., ChatGPT, Perplexity, Claude).",
    "permissions": ["contextMenus", "storage", "tabs"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "options_page": "options.html"
  }
  