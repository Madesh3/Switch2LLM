{
  "manifest_version": 3,
  "name": "LLM Query Extension",
  "description": "Query ChatGPT, Claude, and Perplexity with custom prefixes.",
  "version": "1.0",
  "permissions": [
    "storage",
    "tabs",
    "omnibox"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "omnibox": {
    "keyword": "llm"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://www.perplexity.ai/*"
  ]
}
